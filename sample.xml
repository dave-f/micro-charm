<root>

  <!-- General information -->
  <adventure>
    <name>Sample</name>
    <version>1</version>
    <start>cellar2</start>
    <startobjects/>
  </adventure>

  <!-- Messages -->
  <messages>
    <!-- System messages, these should always be present, although you may alter the text -->
    <system>
      <msg id="prompt">What now?</msg>
      <msg id="ok">OK</msg>
      <msg id="cant">You can't</msg>
      <msg id="donthave">You don't have that</msg>
      <msg id="eh">Pardon?</msg>
      <msg id="carrying">You are carrying</msg>
      <msg id="cantsee">You can't see that</msg>
      <msg id="dark">It is dark. You can't see</msg>
    </system>
    <msg id="pushdoor">You push the door</msg>
  </messages>

  <!-- Variables, these are used from condition scripts -->
  <variables>
  </variables>

  <!-- Verbs accepted by the game, a comma separated list means that all verbs are mapped to that ID -->
  <verbs>
    <verb id="push">push</verb>
    <verb id="n">n,north</verb>
    <verb id="s">s,south</verb>
    <verb id="e">e,east</verb>
    <verb id="w">w,west</verb>
  </verbs>

  <!-- Prepositions -->
  <prepositions>
  </prepositions>

  <!-- Objects -->
  <objects>
  </objects>

  <!-- High priority conditions -->
  <highconditions>
  </highconditions>

  <!-- Low priority conditions -->
  <lowconditions>
  </lowconditions>
  
  <!-- Rooms, ie the actual guts of the adventure -->
  <rooms>
    <room id="cellar1">
      <description>You find yourself in a cellar.</description>
      <picture>pic1.dat</picture>
      <exits>
        <south>cellar2</south>
      </exits>
      <!-- Small blocks of code to run at this location -->
      <localconditions/>
    </room>
    <room id="cellar2">
      <description>A smaller, darker, area of the cellar.</description>
      <picture>pic2.dat</picture>
      <exits>
        <north>cellar1</north>
      </exits>
      <!-- Small blocks of code to run at this location -->
      <localconditions/>
    </room>
  </rooms>
</root>

